{
    "name": "monorepo",
    "private": true,
    "scripts": {
        "start": "lerna run start --parallel",
        "start:app": "lerna run start --scope @monorepo/application",
        "start:app-ssr": "lerna run start --scope @monorepo/application-ssr",
        "start:components": "lerna run start --scope @monorepo/components",
        "add:package": "lerna add --exact",
        "add:package:app": "lerna add --exact --scope=@monorepo/application",
        "add:package:app-ssr": "lerna add --exact --scope=@monorepo/application-ssr",
        "add:package:components": "lerna add --exact --scope @monorepo/components",
        "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx}\"",
        "format:app": "prettier --write \"packages/application/*.{js,jsx,ts,tsx}\"",
        "format:app-ssr": "prettier --write \"packages/application-ssr/*.{js,jsx,ts,tsx}\"",
        "format:components": "prettier --write \"packages/components/*.{js,jsx,ts,tsx}\"",
        "docs:components": "lerna run start:docs --scope @monorepo/components"
    },
    "devDependencies": {
        "lerna": "^3.22.1",
        "prettier": "^2.2.1"
    }
}
